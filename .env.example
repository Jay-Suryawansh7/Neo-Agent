# ============================================
# NEO AI CHATBOT - ENVIRONMENT CONFIGURATION
# ============================================

# ------------------------------
# OpenAI-Compatible API (Groq for Chat)
# ------------------------------
OPENAI_API_BASE_URL=https://api.groq.com/openai/v1
OPENAI_API_KEY=your-groq-api-key-here
OPENAI_MODEL_NAME=mixtral-8x7b-32768

# ------------------------------
# Embedding Provider (Jina AI - Free alternative)
# ------------------------------
EMBEDDING_API_KEY=your-jina-api-key-here
EMBEDDING_API_BASE_URL=https://api.jina.ai/v1
EMBEDDING_MODEL=jina-embeddings-v3

# ------------------------------
# Pinecone Vector Database
# ------------------------------
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=neo-knowledge

# ------------------------------
# PostgreSQL Database
# ------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/neo_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ------------------------------
# Server Configuration
# ------------------------------
NODE_ENV=development
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ------------------------------
# Session & Security
# ------------------------------
SESSION_SECRET=change-this-to-a-random-secret-in-production
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------
# AI Configuration
# ------------------------------
MAX_TOKENS=2000
TEMPERATURE=0.7
TOP_P=0.9
STREAM_ENABLED=true

# ------------------------------
# RAG Configuration
# ------------------------------
RAG_TOP_K=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# ------------------------------
# Memory Configuration
# ------------------------------
MEMORY_WINDOW_SIZE=10
ENABLE_LONG_TERM_MEMORY=true
SUMMARY_THRESHOLD=20

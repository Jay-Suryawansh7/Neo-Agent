{
    "name": "neo-backend",
    "version": "1.0.0",
    "description": "Neo AI Chatbot Backend - Express.js + PostgreSQL + Pinecone",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "migrate": "psql $DATABASE_URL -f src/db/schema.sql",
        "test": "jest",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "neo",
        "chatbot",
        "ai",
        "rag",
        "memory"
    ],
    "author": "CogneoVerse",
    "license": "PROPRIETARY",
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3",
        "pg-pool": "^3.6.1",
        "@pinecone-database/pinecone": "^2.0.1",
        "openai": "^4.28.0",
        "uuid": "^9.0.1",
        "cookie-parser": "^1.4.6",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "morgan": "^1.10.0",
        "joi": "^17.11.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/node": "^20.11.5",
        "@types/pg": "^8.10.9",
        "@types/uuid": "^9.0.7",
        "@types/cookie-parser": "^1.4.6",
        "@types/compression": "^1.7.5",
        "@types/morgan": "^1.9.9",
        "typescript": "^5.3.3",
        "tsx": "^4.7.0",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "prettier": "^3.2.4",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.11",
        "ts-jest": "^29.1.1"
    }
}